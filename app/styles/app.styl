// dev tools
@import "framework/variables"
@import "framework/fonts"
@import "framework/mixins"
@import "framework/placeholders/grids"

// framework items
@import "framework/normalize"

// styles
html, body, div, ul, h1, h2, h3, h4
  margin: 0
  padding: 0
  color: darkTan

body
  font-family: Verdana
  background-image: url("halftone.png")

header
  @extend $gridParent
  font-family: Verdana
  background-color: lightGrey
  height: 75px
  border-top: 5px solid accentGreen
  border-bottom: 1px solid #ddd

  nav
    content()
    display: block

    h2, h2 a
      color: accentPeach
      display: inline-block
      font-family: pacifico
      font-size: 38px
      font-weight: normal
      margin-top: 3px

    h2 a
      text-decoration: none
      &:hover
        text-decoration: none

h1
  color: darkTan
  font-family: andadasc
  font-size: 90px
  font-weight: normal
  padding: 70px 0 35px 0

h4
  color: darkTan
  font-size: 20px
  padding: 0


a
  text-decoration: none
  color: lighten(accentPeach, 20%)

  &:hover
    text-decoration: underline


section
  @extend $gridParent
  font-family: Verdana
  letter-spacing: 0

  .row
    @extend $gridParent
    font-family: Verdana
    letter-spacing: 0

    h2, h2 a
      font-family: andadasc
      font-weight: normal
      color: darkTan
      font-size: 40px



.main-content
  background-color: lightGrey
  border-top: 1px solid #ddd
  min-height: 325px

  small
    font-size: 15px
    color: lightTan

    &.numbers
      display: block
      text-align: right
      padding-top: 15px

.row
    content()
    margin-top: 60px

    h1
      text-align: center
      font-size: 60px
      padding: 0 25px 35px

    h2
      color: accentPeach
      font-family: andada
      font-weight: normal

    h3
      font-family: andada
      color: lightTan
      padding-bottom: 30px

    p
      font-size: 20px

.legislator-list
  vertical-align: top
  list-style: none
  width: 100%
  border-bottom: 1px solid #ddd
  margin-right: 30px
  display: inline-block

  .legislator
    @extend $gridColumn-1-3
    padding: 15px 25px
    transition: background-color 0.2s
    border-radius: 10px 10px 0 0
    cursor: pointer

    h2
      font-size: 25px
      display: block

    &:hover
      margin-top: -2px
      background-color: lighterTan
      border-bottom: 2px solid lightTan

      h2
        color: accentPeach

    &.selected
      background-color: middleTan

      h2
        color: accentPeach

    &:active
      background-color: middleTan
      border-bottom: 0px
      margin-top: 0px

  h2, h4
    display: inline-block

  h2, p
    margin: 0
    padding: 0

  h5
    margin-top: 0

  button
    background-color: accentGreen
    border-radius: 5px
    border: 1px solid #ddd
    color: white
    font-size: 20px
    height: 40px
    margin: 0
    padding: 0
    width: 140px

  div
    vertical-align: top
    display: inline-block

.about,
.legislator-detail,
.legislator-page
  content()
  padding-top: 25px

  .colum
    padding-bottom: 50px
    @extend $gridColumn-1-2

  h2,
  h4,
  h5
    padding-left: 8px

  p h3
    color: darkTan
    font-size: 25px
    padding: 0

  h4
    border-bottom: 1px dotted middleTan
    padding-bottom: 25px
    margin-bottom: 25px

  h5
    margin: 0
    color: accentPeach
    font-size: 20px
    padding-bottom: 15px

  div:first-of-type
    padding-right: 20px
    position: relative
    height: auto

  ul
    padding: 0
    margin: 0
    list-style: none
    font-size: 17px

    li
      padding: 8px
      height: 22px

      &:nth-child(2n)
        background-color: middleTan

      strong
        max-width: calc( 100% - 110px )
        overflow: hidden
        display: inline-block

      em
        float: right
        color: accentPeach


.about
  padding-top: 60px

  div
    padding-right: 0

  h1
    font-size: 40px
    padding: 20px
    border-top: 1px solid accentGreen
    border-bottom: 1px solid accentGreen
    background-color: lightTan
    margin: 0 30px
    border-radius: 20px
    background-image: url("halftone.png")

  h2
    font-size: 25px
    color: accentPeach
    font-family: andadasc

  p
    margin-top: 10px
    margin-bottom: 0
    color: darkTan
    font-size: 17px

@media (max-width: 900px)

  .main-content .row h1
    font-size: 40px
    text-align: center

.search-bar
  background-image: url("images/coffee-shop.jpg")
  background-position: center
  background-repeat: no-repeat
  background-size: cover

  .search
    content()
    padding-bottom: 70px
    text-align: center
    max-width: 100%
    background-color: rgba(219, 218, 211, 0.6)

    &.small
      padding-top: 25px
      padding-bottom: 25px

      h1
        padding: 0
        font-size: 50px
        padding-right: 35px
        display: inline-block

    .search-btn
      font-size: 35px
      color: darkTan
      cursor: pointer
      padding: 10px

      &:hover
        color: accentPeach

    &.invalid input
      border-color: accentPeach

    input
      textInput()
      border: 10px solid #6A6967
      font-size: 30px
      height: 45px
      margin: 0 auto
      width: 300px

.footer
  border-bottom: 5px solid accentGreen

  .row
    margin: 40px auto

    .colum
      @extend $gridColumn-1-3

      h4
        padding: 0 10px
        font-size: 18px

      p
        padding: 0 10px
        font-size: 15px


@media (max-width: 700px)
  header nav
    text-align: center

  .search h1
    font-size: 60px

  .main-content .row h1
    text-align: center
